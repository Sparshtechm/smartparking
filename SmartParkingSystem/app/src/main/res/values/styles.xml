<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/app_theme_color</item>
    </style>

    <!-- login/Registration/Verification Title Style -->
    <style name="Reg_log_Style" parent="@android:style/Widget.TextView">
        <item name="android:background">@color/app_theme_color</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>

    </style>


    <!-- Edit Textview Styles -->

    <style name="Reg_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/shape</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_width">250dip</item>
        <item name="android:paddingStart">@dimen/edt_left_padding</item>
        <item name="android:paddingLeft">@dimen/edt_left_padding</item>
        <item name="android:paddingRight">@dimen/edt_right_padding</item>
        <item name="android:paddingEnd">@dimen/edt_right_padding</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <!-- Button Style -->
    <style name="Reg_btnStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/rounded_buttons</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
