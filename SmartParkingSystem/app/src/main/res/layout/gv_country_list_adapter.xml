<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/flag_india"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:id="@+id/iv_gv_country_flag_icon" />

        <TextView
            android:text="India"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/iv_gv_country_flag_icon"
            android:layout_toStartOf="@+id/tv_gv_country_isd_code"
            android:id="@+id/tv_gv_country_name" />

        <TextView
            android:text="+91"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_gv_country_isd_code" />

    </RelativeLayout>
</RelativeLayout>
