<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_verification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sparsh.smartparkingsystem.registration.VerificationActivity">


    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:background="@color/app_theme_color"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/icon_zone_logo" />

        <TextView
            android:id="@+id/tv_app_name_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text="@string/app_name_splash"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>


  <!--  <TextView
        android:id="@+id/tv_verify_title"
        style="@style/Reg_log_Style"
        android:layout_alignParentTop="true"
        android:text="@string/txt_title_verification" />-->


    <TextView
        android:id="@+id/tv_verification_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/rl_header"
        android:text="@string/txt_title_verification"
        android:textColor="@color/app_theme_color"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_reg_mobile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_verification_lbl"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_blue">

        <ImageView
            android:id="@+id/iv_reg_mob_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:contentDescription="@null"
            android:src="@drawable/mobile_icon" />

        <TextView
            android:text="91"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_toEndOf="@+id/iv_reg_mob_icon"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/tv_country_code" />

        <EditText
            android:id="@+id/edt_mobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tv_country_code"
            android:background="@color/bg_transparent"
            android:ems="10"
            android:hint="@string/hint_mobile"
            android:inputType="number"
            android:maxLength="16"
            android:maxLines="1"
            android:enabled="false"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

    </RelativeLayout>

   <!-- <TextView
        android:id="@+id/tv_vfy_user_mob"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_reg_mobile"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/shape_blue"
        android:gravity="center"
        android:textColor="@color/app_theme_color"
        android:textSize="18sp"
        android:textStyle="bold" />-->

    <EditText
        android:id="@+id/vfy_edt_user_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_reg_mobile"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_blue"
        android:gravity="center"
        android:layout_margin="20dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:ems="10"
        android:textSize="20sp"
        android:hint="@string/hint_verify_code"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_verify"
        style="@style/Reg_btnStyle"
        android:layout_below="@+id/vfy_edt_user_code"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/btn_verify" />

    <TextView
        android:id="@+id/tv_resend"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_verify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/txt_resend_code_lbl"
        android:textColor="@color/app_theme_color"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
