<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context="com.sparsh.smartparkingsystem.registration.LoginActivity">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/txt_title_parking_confirmation"
        android:textColor="@color/white"
        android:background="@color/app_theme_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_header"
        android:background="@color/white">

        <!--<TextView
            android:id="@+id/tv_booking_cnf_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/txt_title_parking_confirmation"
            android:textColor="@color/app_theme_color"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/div1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_booking_cnf_lbl"
            android:layout_marginTop="10dp"
            android:background="@color/grey" />-->

        <TextView
            android:id="@+id/tv_zone_name_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_zone_name"
            android:layout_marginTop="10dp"
            android:text="Zone Name"
            android:textColor="@color/app_theme_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_zone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_zone_name_lbl"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Tech m"
            android:textSize="20sp" />

        <View
            android:id="@+id/div2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_zone_name"
            android:layout_margin="5dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/tv_duration_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/div2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Duration"
            android:textColor="@color/app_theme_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_start_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_duration_lbl"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Tech m"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_end_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_start_duration"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:text="Tech m"
            android:textSize="20sp" />

        <View
            android:id="@+id/div3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_end_duration"
            android:layout_margin="5dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/tv_vehicle_type_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/div3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Vehicle Type"
            android:textColor="@color/app_theme_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_vehicle_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_vehicle_type_lbl"
            android:layout_alignStart="@+id/tv_vehicle_type_lbl"
            android:layout_below="@+id/tv_vehicle_type_lbl"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="Tech m"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_vehicle_type"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_vehicle_type_lbl"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/icon_car_white" />

        <TextView
            android:id="@+id/tv_slot_type_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/div3"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:text="Slot Type"
            android:textColor="@color/app_theme_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_slot_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_slot_type_lbl"
            android:layout_alignStart="@+id/tv_slot_type_lbl"
            android:layout_below="@+id/tv_slot_type_lbl"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="Tech m"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_slot_type"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_slot_type_lbl"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/icon_parking_white" />

        <View
            android:id="@+id/div4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/iv_vehicle_type"
            android:layout_margin="5dp"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/rl_price"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/div4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_y"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dollor_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/icon_dollar" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/iv_dollor_icon"
                android:gravity="center"
                android:text="15.00"
                android:textColor="@color/black"
                android:textSize="28sp" />
        </RelativeLayout>


        <Button
            android:id="@+id/btn_pay"
            style="@style/Reg_btnStyle"
            android:layout_width="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rl_price"
            android:layout_margin="20dp"
            android:text="@string/btn_pay" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/Reg_btnStyle"
            android:layout_width="100dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/rl_price"
            android:layout_margin="20dp"
            android:text="@string/btn_cancel" />



    </RelativeLayout>

</RelativeLayout>
