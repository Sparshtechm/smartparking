<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape">

        <LinearLayout
            android:id="@+id/ll_header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_level_lbl"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/bg_txt_blue"
                android:gravity="center"
                android:text="Level" />

            <TextView
                android:id="@+id/tv_capacity_lbl"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:gravity="center"
                android:text="Capacity" />

            <TextView
                android:id="@+id/tv_availability_lbl"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/green"
                android:gravity="center"
                android:text="Available" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_header1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:weightSum="3">


            <TextView
                android:id="@+id/tv_price_lbl"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/grey"
                android:gravity="center"
                android:text="Price" />

            <TextView
                android:id="@+id/tv_over_delayed_lbl"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/grey"
                android:gravity="center"
                android:text="Over Delayed" />

            <TextView
                android:id="@+id/tv_long_hours_lbl"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/grey"
                android:gravity="center"
                android:text="Long Hours" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_header3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_header2"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="3">


            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/grey"
                android:gravity="center"
                android:text="Price" />

            <TextView
                android:id="@+id/tv_over_delayed"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/grey"
                android:gravity="center"
                android:text="Over Delayed" />

            <TextView
                android:id="@+id/tv_long_hours"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/grey"
                android:gravity="center"
                android:text="Long Hours" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_book_now"
            style="@style/Reg_btnStyle"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ll_header3"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:text="@string/btn_book_now"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>