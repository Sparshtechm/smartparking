<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape">

        <TextView
            android:id="@+id/tv_zone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Noida City Center"
            android:textColor="@color/app_theme_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_zone_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_zone_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Noida City Center parking"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_parking_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_zone_address"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="9:00AM - 11:30 AM"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_parking_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_parking_time"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="$60"
            android:textStyle="bold"
            android:textColor="@color/app_theme_color"
            android:textSize="16sp" />

        <TextView
            android:text="Completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_parking_payment"
           android:textColor="@color/green"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:id="@+id/tv_booking_status" />
    </RelativeLayout>
</LinearLayout>