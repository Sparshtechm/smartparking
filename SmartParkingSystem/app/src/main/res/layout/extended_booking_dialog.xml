<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_theme_color"
    tools:context="com.sparsh.smartparkingsystem.registration.LoginActivity">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/app_name_splash"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_header"
        android:layout_margin="10dp"
        android:background="@drawable/roundedcorner">

        <TextView
            android:id="@+id/tv_booking_extended_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/txt_title_extended_confirmation"
            android:textColor="@color/app_theme_color"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_booking_extended_lbl"
            android:layout_marginTop="10dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/tv_header_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/div"
            android:layout_margin="10dp"
            android:text="@string/txt_extended_msg"
            android:textColor="@color/bg_txt_blue"
            android:textStyle="bold|italic" />

        <View
            android:id="@+id/div1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_header_msg"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/tv_zone_name_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_zone_name"
            android:layout_below="@+id/div1"
            android:layout_marginTop="5dp"
            android:text="Zone Name"
            android:textColor="@color/app_theme_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_zone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_zone_name_lbl"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Tech m"
            android:textSize="22sp" />

        <View
            android:id="@+id/div2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_zone_name"
            android:layout_margin="5dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/tv_duration_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/div2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Duration"
            android:textColor="@color/app_theme_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_start_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_duration_lbl"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Tech m"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_end_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_start_duration"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:text="Tech m"
            android:textSize="22sp" />

        <View
            android:id="@+id/div3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_end_duration"
            android:layout_margin="5dp"
            android:background="@color/grey" />

