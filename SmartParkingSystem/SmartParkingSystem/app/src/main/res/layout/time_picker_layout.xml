<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_theme_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/roundedcorner">


        <TextView
            android:id="@+id/tv_header_lbl"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Select time"
            android:textColor="@color/app_theme_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/div1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_header_lbl"
            android:layout_margin="5dp"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/ll_hor_min_lbl"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/timePicker"
            android:layout_alignStart="@+id/timePicker"
            android:layout_below="@+id/div1"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_hour_lbl"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="HH"
                android:textColor="@color/app_theme_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_min_lbl"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MM"
                android:textColor="@color/app_theme_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_format_lbl"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="AM-PM"
                android:textColor="@color/app_theme_color"
                android:textStyle="bold" />
        </LinearLayout>


        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_hor_min_lbl"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:timePickerMode="spinner" />

        <View
            android:id="@+id/div2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/timePicker"
            android:layout_margin="5dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/tv_set"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/div2"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Set"
            android:textColor="@color/app_theme_color"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>
